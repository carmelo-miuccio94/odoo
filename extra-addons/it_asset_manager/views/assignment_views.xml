<odoo>
    <record id="view_it_assignment_tree" model="ir.ui.view">
        <field name="name">it.asset.assignment.tree</field>
        <field name="model">it.asset.assignment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="asset_id" />
                <field name="employee_id" />
                <field name="date_assigned" />
                <field name="due_date" />
                <field name="date_returned" />
            </tree>
        </field>
    </record>

    <record id="view_it_assignment_form" model="ir.ui.view">
        <field name="name">it.asset.assignment.form</field>
        <field name="model">it.asset.assignment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="employee_id" />
                        <field name="asset_id" />
                        <field name="date_assigned" />
                        <field name="due_date" />
                        <field name="date_returned" />
                        <field name="note" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>