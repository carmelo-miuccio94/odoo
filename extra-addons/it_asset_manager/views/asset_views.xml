<odoo>
    <record id="view_it_asset_tree" model="ir.ui.view">
        <field name="name">it.asset.tree</field>
        <field name="model">it.asset</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="category" />
                <field name="brand" />
                <field name="model" />
                <field name="status" />
                <field name="assigned_to" />
            </tree>
        </field>
    </record>

    <record id="view_it_asset_form" model="ir.ui.view">
        <field name="name">it.asset.form</field>
        <field name="model">it.asset</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="serial_number" />
                        <field name="category" />
                        <field name="brand" />
                        <field name="model" />
                        <field name="purchase_date" />
                        <field name="warranty_expiration" />
                        <field name="status" />
                        <field name="assigned_to" />
                    </group>
                    <notebook>
                        <page string="Accessories">
                            <field name="accessories_ids" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>